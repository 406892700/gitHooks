{
    "extends": "airbnb-base",
    "globals" : {
      "window": true,
      "document": true,
      "$": true,
      "Vue": true,
      "React": true,
      "ReactDom": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true,
          "experimentalDecoratorsLe": true
      }
  },
    "env": {
      "browser": true
    },
    "rules": {
      "no-new": 0,
      "class-methods-use-this": 0,
      "radix": 0,
      "no-trailing-spaces": 0,
      "no-console": 0,
      "no-alert": 0,
      "no-debugger": 0,
      "indent": ["error", 4],
      "import/no-unresolved": [0, { "commonjs": true, "amd": true}],
      "import/extensions": 0,
      "import/first": 0,
      "arrow-body-style": 0,
      "no-unused-expressions": 0,
      "no-underscore-dangle": 0,
      "no-lonely-if": 0,
      "func-names": 0,
      "no-use-before-define": 0,
      "no-param-reassign": 1,
      "comma-dangle": ["error", {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "ignore"
      }],
      "import/no-extraneous-dependencies": 0
    }
}
